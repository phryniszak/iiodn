    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/app.js",
            "env": {
                "DEBUG": "IIOD*"
            },
            "outputCapture": "std"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Visualize sm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/app_sm/visualize.js"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "app",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/app_sm/app.js"
        }

    ]
}